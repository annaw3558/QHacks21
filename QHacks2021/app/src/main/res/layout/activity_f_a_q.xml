<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".FAQActivity">


    <LinearLayout
        android:id="@+id/logoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/vacpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="VACPASS"
            android:textColor="#185D62"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAQ"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="What is VACPASS For?"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text= "VACPASS was created for users to show their vaccination status with ease and security.\n\nTeaming with your country's healthcare system, we use only the necessary data to show your vaccination."
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="Do I need to update my status?"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text= "No, your status is updated automatically with the update of your health records. All you have to do is activate your account, and you’re good to go!"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="How do i show my vaccination status?"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text= "Press the “SHOW QR CODE” button on the home page for your custom QR cod that can be scanned or displayed when you are travelling. Press the “ADD TO WALLET” to add your VACPASS QR code to your smartphone’s wallet application so you do not have to repeatedly access the app. "
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/returnHome"
        android:layout_width="332dp"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:text="Home"
        android:onClick="ReturnHome"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="26sp"/>

</LinearLayout>